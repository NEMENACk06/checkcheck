<div class="container mx-auto my-10 p-4">
  <section id="header">
    <div class="text-center text-4xl mb-10 font-bold">My Academy Quest</div>
    <div class="avatar flex justify-center mt-4 mb-6">
      <div class="ring-primary ring-offset-base-100 w-40 rounded-full ring-2 ring-offset-2">
        <%= image_tag "profile.jpg", class: "w-auto h-[40vw]" %>
      </div>
    </div>
  </section>
  <section id="add-todo" class="mt-8">
    <h2 class="text-xl font-semibold mb-4">Add a new Todo</h2>
    <%= render "form", todo: @todo %>
  </section>
  <section id="list-todos" class="mt-8">
    <h1 class="text-2xl font-bold mb-4">Todos</h1>
    <ul class="space-y-2">
      <%= render @todos %>
    </ul>
  </section>
</div>