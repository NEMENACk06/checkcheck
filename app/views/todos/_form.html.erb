<%= form_with model: todo,
              id: dom_id(todo, :new_todo_form),
              data: { turbo_stream: true, testid: "todo-form" },
              class: "md:flex space-x-2" do |f| %>
  <%= f.text_field :title,
        placeholder: "New todo",
        required: true,
        class: "flex-1 w-full border-2 border-[#f57b39] rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#f57b39]",
        "data-testid": "todo-title-field" %>
  <%= f.submit "Add Todo",
        class: "px-5 py-2 bg-[#f57b39] text-white font-semibold rounded hover:bg-[#e66f30] transition",
        "data-testid": "todo-submit-btn" %>
<% end %>